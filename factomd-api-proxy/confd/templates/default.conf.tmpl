server {
  listen {{ getv "/port" }} default_server;
  server_name localhost;

  location / {
    if ($request_method = OPTIONS ) {
      add_header Access-Control-Allow-Origin {{ getv "/allowed/origins }}";
      add_header Access-Control-Allow-Credentials {{ getv "/allow/credentials" }}";
      add_header Access-Control-Allow-Methods "GET, POST, OPTIONS, HEAD";
      add_header Access-Control-Allow-Headers "content-type, $http_access_control_request_headers";
      return 204;
    }

    add_header Access-Control-Allow-Origin {{ getv "/allowed/origins }} always;
    add_header Access-Control-Allow-Credentials {{ getv "/allow/credentials" }} always;

    proxy_pass http://localhost:{{ getv "/api/port" }};
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection upgrade;
    proxy_read_timeout 86400;
    proxy_send_timeout 86400;
    proxy_connect_timeout 86400;
  }
}